<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Object to represent the configuration state of the synch engine.
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.synch.db.SynchConfig"
         table="bwsynch_config" >
    <cache usage="read-write"/>
    
    <id name="id" type="long" column="bwsyn_id">
      <generator class="native"/>
    </id>

    <!-- db entity properties -->

    <version name="seq" column="bwsyn_seq" type="integer" />

    <property name="synchlingPoolSize" 
              column="bwsyn_sling_poolsv" type="integer" />

    <property name="synchlingPoolTimeout" 
              column="bwsyn_sling_pooltout" type="long" />

    <property name="missingTargetRetries" 
              column="bwsyn_missing_retries" type="integer" />

    <property name="callbackURI" column="bwsyn_callback_uri" 
              type="string" length="1000" />

    <property name="timezonesURI" column="bwsyn_tzs_uri" 
              type="string" length="1000" />

    <property name="keystore" column="bwsyn_keystore" 
              type="string" length="1000" />

    <property name="privKeys" column="bwsyn_privKeys" 
              type="string" length="1000" />

    <property name="pubKeys" column="bwsyn_pubKeys" 
              type="string" length="1000" />

    <property name="owner" column="bwsyn_owner" type="string" length="500"
              not-null="true"
              index="bwsynidx_subowner" />

    <property name="lastRefresh" column="bwsyn_lrefresh" type="string" length="20" />

    <property name="errorCt" column="bwsyn_errorct" type="integer" />

    <property name="missingTarget" column="bwsyn_missing" 
              type="true_false" not-null="true" />

    <component name="endAConnectorInfo"
               class="org.bedework.synch.SubscriptionConnectorInfo" >
      <property name="connectorId" column="bwsyn_connectorid_a" 
                type="string" length="100" />
      <property name="synchProperties" column="bwsyn_conn_props_a" 
                type="string" length="3000" />
    </component>

    <component name="endBConnectorInfo"
               class="org.bedework.synch.SubscriptionConnectorInfo" >
      <property name="connectorId" column="bwsyn_connectorid_b" 
                type="string" length="100" />
      <property name="synchProperties" column="bwsyn_conn_props_b" 
                type="string" length="3000" />
    </component>

    <component name="info"
               class="org.bedework.synch.SubscriptionInfo" >
      <property name="synchProperties" column="bwsyn_props" 
                type="string" length="3000" />
    </component>

    <property name="direction" column="bwsyn_dir" type="direction" length="25"
              not-null="true" />

    <property name="master" column="bwsyn_mstr" type="master"  length="25"
              not-null="true" />
  </class>
</hibernate-mapping>

