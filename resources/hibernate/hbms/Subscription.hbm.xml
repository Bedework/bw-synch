<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Object to represent a card.
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.synch.Subscription"
         table="bwsynch_subs" >
    <cache usage="read-write"/>
    <typedef class="edu.rpi.cmt.db.hibernate.GenericEnumUserType"
             name="kind">
      <param name="enumClassname">org.bedework.synch.SynchKind</param>
    </typedef>
    
    <typedef class="edu.rpi.cmt.db.hibernate.GenericEnumUserType"
             name="kind">
      <param name="enumClassname">org.bedework.synch.SynchKind</param>
    </typedef>
    
    <typedef class="edu.rpi.cmt.db.hibernate.GenericEnumUserType"
             name="direction">
      <param name="enumClassname">org.bedework.synch.SynchDirectionType</param>
    </typedef>
    
    <typedef class="edu.rpi.cmt.db.hibernate.GenericEnumUserType"
             name="master">
      <param name="enumClassname">org.bedework.synch.SynchMasterType</param>
    </typedef>
    
    <id name="id" type="long" column="bwex_id">
      <generator class="native"/>
    </id>

    <!-- db entity properties -->

    <version name="seq" column="bwsyn_seq" type="integer" />

    <property name="subscriptionId" column="bwsyn_subid" type="string" length="250"
              unique="true"
              not-null="true"
              index="bwsynidx_subid" />

    <component name="endAConnectorInfo"
               class="org.bedework.synch.SubscriptionConnectorInfo" >
      <property name="connectorId" column="bwsyn_connectorid_a" 
                type="string" length="100" />
      <property name="connectorProperties" column="bwsyn_conn_props_a" 
                type="string" length="3000" />
    </component>

    <component name="endBConnectorInfo"
               class="org.bedework.synch.SubscriptionConnectorInfo" >
      <property name="connectorId" column="bwsyn_connectorid_b" 
                type="string" length="100" />
      <property name="connectorProperties" column="bwsyn_conn_props_b" 
                type="string" length="3000" />
    </component>

    <property name="kind" column="bwsyn_kind" type="kind" length="25"
              not-null="true" />

    <property name="direction" column="bwsyn_dir" type="direction" length="25"
              not-null="true" />

    <property name="master" column="bwsyn_mstr" type="master"  length="25"
              not-null="true" />
  </class>
</hibernate-mapping>

